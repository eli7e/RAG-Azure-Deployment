# .env.template
# Environment variables template - Copy to .env and fill in values

# Azure Subscription
AZURE_SUBSCRIPTION_ID=<your-subscription-id>
AZURE_TENANT_ID=<your-tenant-id>

# Project Configuration
PROJECT_NAME=rag-app
ENVIRONMENT=prod
AZURE_REGION=eastus

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=<your-storage-account>
AZURE_STORAGE_CONNECTION_STRING=<your-connection-string>
AZURE_STORAGE_CONTAINER_NAME=pdf-documents

# Azure Cognitive Search
AZURE_SEARCH_SERVICE_NAME=<your-search-service>
AZURE_SEARCH_ENDPOINT=https://<your-search-service>.search.windows.net
AZURE_SEARCH_API_KEY=<your-api-key>
AZURE_SEARCH_INDEX_NAME=rag-documents

# Azure OpenAI
AZURE_OPENAI_SERVICE_NAME=<your-openai-service>
AZURE_OPENAI_ENDPOINT=https://<your-openai-service>.openai.azure.com
AZURE_OPENAI_API_KEY=<your-api-key>
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Managed Identity
MANAGED_IDENTITY_CLIENT_ID=<your-managed-identity-client-id>

# Container Registry
ACR_NAME=<your-acr-name>

# AKS
AKS_CLUSTER_NAME=<your-aks-cluster>
AKS_RESOURCE_GROUP=<your-resource-group>
